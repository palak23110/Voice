<%- include('partials/header') %>

<main class="main-content page-contact">
    <!-- Page Hero Background -->
    <div class="page-hero-bg"></div>
    <div class="page-hero-overlay"></div>
    
    <div class="container">
        <div class="page-header" data-aos="fade-up">
            <h1>Contact Us</h1>
            <p>We'd love to hear from you</p>
        </div>

        <div class="contact-content">
            <div class="contact-info" data-aos="fade-up" data-aos-delay="100">
                <h2>Get in Touch</h2>
                <p style="margin-bottom: 40px; color: var(--text-secondary); line-height: 1.8;">
                    Have a question, suggestion, or just want to say hello? We're here to help. Reach out to us through any of the channels below.
                </p>
                
                <div class="contact-item" data-aos="fade-up" data-aos-delay="200">
                    <div class="contact-icon">üìß</div>
                    <div class="contact-details">
                        <h3>Email</h3>
                        <p>contact@voices.com</p>
                        <p style="font-size: 14px; color: var(--text-muted); margin-top: 4px;">We'll respond within 24 hours</p>
                    </div>
                </div>

                <div class="contact-item" data-aos="fade-up" data-aos-delay="300">
                    <div class="contact-icon">üí¨</div>
                    <div class="contact-details">
                        <h3>Social Media</h3>
                        <p>Follow us on Twitter, Facebook, and Instagram</p>
                        <p style="font-size: 14px; color: var(--text-muted); margin-top: 4px;">@voicesplatform</p>
                    </div>
                </div>

                <div class="contact-item" data-aos="fade-up" data-aos-delay="400">
                    <div class="contact-icon">üìç</div>
                    <div class="contact-details">
                        <h3>Office</h3>
                        <p>123 Innovation Street</p>
                        <p>Tech City, TC 12345</p>
                    </div>
                </div>

                <div class="contact-item" data-aos="fade-up" data-aos-delay="500">
                    <div class="contact-icon">‚è∞</div>
                    <div class="contact-details">
                        <h3>Business Hours</h3>
                        <p>Monday - Friday: 9:00 AM - 6:00 PM</p>
                        <p style="font-size: 14px; color: var(--text-muted); margin-top: 4px;">Weekend: Closed</p>
                    </div>
                </div>
            </div>

            <div class="contact-form-wrapper" data-aos="fade-up" data-aos-delay="200">
                <h2>Send us a Message</h2>
                <form action="/contact" method="POST" class="blog-form" style="padding: 0;">
                    <div class="form-group">
                        <label for="name">Your Name *</label>
                        <input type="text" id="name" name="name" required placeholder="Enter your name">
                    </div>
                    <div class="form-group">
                        <label for="email">Your Email *</label>
                        <input type="email" id="email" name="email" required placeholder="Enter your email">
                    </div>
                    <div class="form-group">
                        <label for="subject">Subject *</label>
                        <input type="text" id="subject" name="subject" required placeholder="What's this about?">
                    </div>
                    <div class="form-group">
                        <label for="message">Message *</label>
                        <textarea id="message" name="message" rows="6" required placeholder="Tell us what's on your mind..."></textarea>
                    </div>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-primary">Send Message</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

<%- include('partials/footer') %>

